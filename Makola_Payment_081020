								cred = $(byXpath("//*[@id='"+z+"-amount']")).getText();
								cred = cred.replace(",","");
								Double cred_val = Double.parseDouble(cred);
								
								credit_holders_amt_cmp = credit_holders_amt[z];
								
														
								if(cred_val == credit_holders_amt_cmp){

									match_count++;
								}
							}
						}
						
						approved = false;
						
						//approve payment if all transactions matched
