					debit_amount += paymentAmount2;
				}
				
			
			}
			fisi2.close();	
			
			debit_amount = debit_amount - reversal_amount;
			println(debit_amount)
			
			sys.defineVariable("debitAmt",debit_amount)
			
			
			
			//check for cell type and get value with respect to
			public getCellPlusPlus(Cell cell) {
				switch (cell.getCellType())
				{
				case DateUtil.isCellDateFormatted(cell):
					System.out.println("Date");
					Date receivedDate = cell.getDateCellValue();
					LocalDate receivedLocalDate = receivedDate.toLocalDate();
					return receivedLocalDate;
					break;
				
				case Cell.CELL_TYPE_BLANK:
					System.out.println("Blannk");
					break;
				case Cell.CELL_TYPE_BOOLEAN:
					System.out.println("bool");
					break;
				case Cell.CELL_TYPE_ERROR:
					System.out.println("erreur");
					break;

				case Cell.CELL_TYPE_NUMERIC:
					System.out.println("Number");
					double numericValue = cell.getNumericCellValue();
					return numericValue;
					break;
				case Cell.CELL_TYPE_STRING:
					System.out.println("String");
					String stringValue = cell.getStringCellValue();
					double doubleValue = Double.parseDouble(stringValue);
					return doubleValue;
					break;

				} 
			}
			
		]]></script>
	
